<h1>Signup</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
      <%= form_for @user, url: signup_path do |form| %>
      		<div class="form-group">
            <%= form.label :name%>
      			<%= form.text_field :name,:class=>'form-control input-md' %>
      			<%= error_message form, :name%>
      		</div>
          <div class="form-group">
          		<%= form.label :email %>
          		<%= form.text_field :email,:class=>'form-control input-md' %>
          		<%= error_message form,:email%>
          </div>
          <div class="form-group">
        			<%= form.label :password %>
        			<%= form.password_field :password,class: 'form-control' %>
        			<%= error_message form,:password%>
        		</div>
        	<div class="form-group">
        			<%= form.label :password_confirmation %>
        			<%= form.password_field :password_confirmation,class: 'form-control'  %>
        			<%= error_message form,:password_confirmation%>
         </div>
  		   <%= form.submit "Create",:class=>'btn btn-primary'%>
	   <%end%>
  </div>
</div>
